<%- include('./layouts/header.ejs') -%>

    <main class="pt-5">

        <div class="page-loader">
            <img src="/img/Picsart_24-03-07_23-16-24-066.png" alt="Your Logo" class="logo">

        </div>

        <div class="content1">
            <div class="section-1">
                <div class="container-fluid section-1-main pt-4">
                </div>
                <div class="start-button d-flex justify-content-center align-items-center">
                    <button class="button-1" id="button1">
                        <h1 class="button-text m-0">Start</h1>
                        <p class="button-p">journey with us</p>
