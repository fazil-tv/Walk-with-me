        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        window.addEventListener('load', function () {
            document.querySelector('.homeQoute').classList.add('show');
        });


        document.getElementById('button1').addEventListener('click', function () {
            document.querySelector('.section-1').style.transition = 'transform 0.8s';
            document.querySelector('.section-1').style.transform = 'scale(0)';

            setTimeout(function () {
                window.location.href = '/safetymap';
            }, 1300);
        });


        $(window).on('load', function () {
            setTimeout(function () {
                $('.page-loader').fadeOut('slow');
            },2000);
        });

    </script>

